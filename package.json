{
  "name": "hckre",
  "description": "HE CLI (Engineering & Support)",
  "version": "2.1.0",
  "author": "esc_wq <mail@satheesh.dev>",
  "bin": {
    "hckre": "./bin/run"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "@types/chai": "^4.2.21",
    "@types/ini": "^1.3.30",
    "@types/inquirer": "^7.3.3",
    "@types/js-yaml": "^4.0.2",
    "@types/listr": "^0.14.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.17.60",
    "@types/node-notifier": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "chai": "^4.3.4",
    "eslint": "^7.0.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-config-oclif-typescript": "^0.1.0",
    "eslint-config-prettier": "^8.3.0",
    "globby": "^10.0.2",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mocha": "^9.0.3",
    "nyc": "^14.1.1",
    "prettier": "^2.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.10"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "hckre",
    "hackerearth"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "hckre",
    "topics": {
      "mcs": {
        "description": "mcs project and its dependent services"
      },
      "aws": {
        "description": "aws services"
      },
      "vpn": {
        "description": "manage wireguard vpn"
      },
      "oncall": {
        "description": "oncall support"
      }
    },
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-update",
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "update": {
      "s3": {
        "bucket": "hckre-cli",
        "host": "https://hckre-cli.s3.ap-south-1.amazonaws.com/",
        "templates": {
          "target": {
            "unversioned": "<%- 'channels/' + channel + '/' %><%- bin %>-<%- platform %>-<%- arch %><%- ext %>",
            "versioned": "<%- 'channels/' + channel + '/' %><%- version %>/<%- bin %>-<%- platform %>-<%- arch %><%- ext %>",
            "manifest": "<%- 'channels/' + channel + '/' %><%- platform %>-<%- arch %>"
          },
          "vanilla": {
            "unversioned": "<%- 'channels/' + channel + '/' %><%- bin %>-<%- platform %>-<%- arch %><%- ext %>",
            "versioned": "<%- 'channels/' + channel + '/' %><%- version %>/<%- bin %>-<%- platform %>-<%- arch %><%- ext %>",
            "manifest": "<%- 'channels/' + channel + '/' %><%- platform %>-<%- arch %>"
          }
        }
      }
    },
    "warn-if-update-available": {
      "timeoutInDays": 1,
      "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>."
    },
    "hooks": {
      "init": "./lib/hooks/init/check-init"
    }
  },
  "scripts": {
    "pack": "oclif-dev pack",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "format": "prettier \"./src/**/*.+(js|jsx|css|less|scss|ts|tsx|md)\" --check",
    "format:fix": "prettier \"./src/**/*.+(js|jsx|css|less|scss|ts|tsx|md)\" --write"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-autocomplete": "^0.3.0",
    "@oclif/plugin-help": "^3.2.2",
    "@oclif/plugin-update": "^1.5.0",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "@types/bluebird": "^3.5.36",
    "aws-sdk": "^2.968.0",
    "chalk": "^4.1.2",
    "cli-ux": "^5.6.3",
    "config-ini-parser": "^1.5.9",
    "console-table-printer": "^2.10.0",
    "execa": "^5.1.1",
    "ini": "^2.0.0",
    "inquirer": "^8.1.2",
    "inquirer-search-list": "^1.2.6",
    "js-yaml": "^3.14.1",
    "listr": "^0.14.3",
    "node-http-ping": "^0.3.1",
    "node-notifier": "^10.0.0",
    "sudo-prompt": "^9.2.1",
    "tslib": "^1.14.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run format:fix",
      "git add"
    ]
  }
}
